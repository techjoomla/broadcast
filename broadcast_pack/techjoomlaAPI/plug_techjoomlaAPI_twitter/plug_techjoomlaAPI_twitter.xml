<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="techjoomlaAPI" method="upgrade">
	<name>Techjoomla-Twitter API</name>
	<author>Techjoomla</author>
	<creationDate>15th Mar 2011</creationDate>
	<copyright>(C)techjoomla.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>extensions@tekdi.net</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<version>2.1</version>
	<isconsumer>true</isconsumer>
	<description>
		Techjoomla Twitter API plugin 
	</description>
	
	<files>
		<file plugin="plug_techjoomlaAPI_twitter">plug_techjoomlaAPI_twitter.php</file>
		<folder>plug_techjoomlaAPI_twitter</folder>
	</files>
	<languages> 
			<language tag="en-GB">en-GB/en-GB.plug_techjoomlaAPI_twitter.ini</language>
	</languages>
	<!-- parameters for Joomla 1.5.x -->
	<params>
		<param name="appKey" type="text" default="" label="Enter Twitter App ID:" description="Enter Twitter App ID" />
		<param name="appSecret" type="text" default="" label="Enter Twitter App Secret: " description="Enter Twitter App Secret: " />
		<param name="no_allowed_message" type="text" default="10" label="Enter no of allowed messages" description="Enter no of allowed messages" />
	</params>
	
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
  	<fields name="params">
    	<fieldset name="basic">
				<field name="appKey" type="text" default="" label="Enter Twitter App ID:" description="Enter Twitter App ID:"/>
				<field name="appSecret" type="text" default="" label="Enter Twitter App Secret:" description="Enter Twitter App Secret:" />
				<field name="no_allowed_message" type="text" default="10" label="Enter no of allowed messages" description="Enter no of allowed messages"/>
			</fieldset>
		</fields>
	</config>

</install>
