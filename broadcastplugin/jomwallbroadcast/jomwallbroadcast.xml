<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
	<name>Jomwall Broadcast</name>
	<creationDate>Feb 2012</creationDate>
	<author>TechJoomla</author>
	<authorEmail>TechJoomla</authorEmail>
	<authorUrl>contact@techjoomla.com</authorUrl>
	<version>1.3.5</version>
	<isapplication>true</isapplication>
	<description>
		Broadcast Jomwall status to other Networks
	</description>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_system_jomwallbroadcast.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_system_jomwallbroadcast.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.plg_system_jomwallbroadcast.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_system_jomwallbroadcast.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_system_jomwallbroadcast.ini</language>
 	</languages>	
	
	<files>
		<file plugin="jomwallbroadcast">jomwallbroadcast.php</file>
	</files>
	
	<!-- parameters for Joomla 1.5.x -->	
	<params addpath="/plugins/system/element">
		<param name="plugintitle" type="text" default="Jomwall Broadcast" label="PLG_NAME" description="PLG_NAME_DESC" />
		</params>	

	<!-- Fields for Joomla 1.6.x and onwards -->
 	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugintitle" type="text" default="Jomwall Broadcast" label="PLG_NAME" description="PLG_NAME_DESC" />	
			</fieldset>
		</fields>
	</config>
</install>
