<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client ="site" method="upgrade">
	<name>Broadcast Module</name>
	<author>Techjoomla</author>
	<creationDate>Feb 2012</creationDate>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<version>1.5</version>
	<description>Broadcast Module to connect Facebook, Twitter, Linkedin</description>
  <files>
      <filename module="mod_broadcast">mod_broadcast.php</filename>
      <filename>mod_broadcast.css</filename>
      <filename>index.html</filename>
      <folder>tmpl</folder>
      <folder>images</folder>
  </files>
  <languages folder="language">
  	<language tag="en-GB">en-GB/en-GB.mod_broadcast.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_broadcast.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.mod_broadcast.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.mod_broadcast.ini</language>
		<language tag="th-TH">th-TH/th-TH.mod_broadcast.ini</language>
  </languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config>
	<fields name="params">
		<fieldset name="basic">
								<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_SUFIX_DES" />
			<field name="show_horizontal" class="btn-group" type="radio" default="hr" label="MOD_ORIENT" description="MOD_ORIENT_DESC">
				<option value="hr">MOD_ORIENT_HR</option>
				<option value="vr">MOD_ORIENT_VR</option>
			</field>
			<field name="pretext" type="textarea" default="" rows="2" cols="40" label="MOD_PRE_TEXT" description="MOD_PRE_TEXT_DESC" />
			<field name="posttext" type="textarea" default="" rows="2" cols="40" label="MOD_POS_TEXT" description="MOD_POS_TEXT_DESC" />

			<field name="show_rss" class="btn-group" type="radio" default="1" label="MOD_BCRSS" description="MOD_BCRSS_DESC">
				<option value="1">MOD_BCYES</option>
				<option value="0">MOD_BCNO</option>
			</field>
		</fieldset>
	</fields>
	</config>
</extension>

