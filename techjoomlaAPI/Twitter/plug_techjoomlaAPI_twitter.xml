<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="techjoomlaAPI" method="upgrade">
	<name>Techjoomla-Twitter API</name>
	<author>Techjoomla</author>
	<creationDate>Feb 2012</creationDate>
	<copyright>(C)techjoomla.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>contact@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<version>1.3.5</version>
	<isconsumer>true</isconsumer>
	<description>Techjoomla Twitter API plugin</description>
	
	<files>
		<file plugin="plug_techjoomlaAPI_twitter">plug_techjoomlaAPI_twitter.php</file>
		<folder>plug_techjoomlaAPI_twitter</folder>
	</files>
	<languages folder="language"> 
			<language tag="en-GB">en-GB/en-GB.plg_techjoomlaAPI_plug_techjoomlaAPI_twitter.ini</language>
			<language tag="pt-BR">pt-BR/pt-BR.plg_techjoomlaAPI_plug_techjoomlaAPI_twitter.ini</language>
			<language tag="zh-TW">zh-TW/zh-TW.plg_techjoomlaAPI_plug_techjoomlaAPI_twitter.ini</language>	
			<language tag="sv-SE">sv-SE/sv-SE.plg_techjoomlaAPI_plug_techjoomlaAPI_twitter.ini</language>
			<language tag="th-TH">th-TH/th-TH.plg_techjoomlaAPI_plug_techjoomlaAPI_twitter.ini</language>					
	</languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params" >
			<fieldset name="pathapi"  addfieldpath="/plugins/techjoomlaAPI/plug_techjoomlaAPI_twitter/plug_techjoomlaAPI_twitter/element/pathapi" label="PLG_TECHJOOML_TWITEER_API_PARAMETER">
					<field name="pathapi_twitter" class="inputbox" type="pathapi" label="PLG_TECHJOOML_TWITEER_API_GET_KEY" description="PLG_TECHJOOML_TWITEER_API_GET_KEY_DESC" />
					<field name="appKey" type="text" default="" label="PLG_TECHJOOML_TWITEER_API_CONSUMER_KEY" description="PLG_TECHJOOML_TWITEER_API_CONSUMER_KEY_DESC"/>
					<field name="appSecret" type="text" default="" label="PLG_TECHJOOML_TWITEER_API_CONSUMER_SECRET" description="PLG_TECHJOOML_TWITEER_API_CONSUMER_SECRET_DESC" />
					<field name="no_allowed_invites" type="text" default="10" label="PLG_TECHJOOML_TWITEER_API_LIMIT_MSG" description="PLG_TECHJOOML_TWITEER_API_LIMIT_MSG_DESC"/>
					<field name="broadcast_limit" type="text" default="5" label="PLG_TECHJOOML_TWITEER_API_LIMIT_STATUS" description="PLG_TECHJOOML_TWITEER_API_LIMIT_STATUS_DESC" />
					<field name="throttle_limit" type="text" default="250" readonly="true" label="PLG_TECHJOOML_TWITEER_API_THROTTLE" description="PLG_TECHJOOML_TWITEER_API_THROTTLE_DESC" />
			</fieldset>

			<fieldset name="mappingfields"  addfieldpath="/plugins/techjoomlaAPI/plug_techjoomlaAPI_twitter/plug_techjoomlaAPI_twitter/element/mappingfields" label="PLG_TECHJOOML_TWITEER_API_PRO_IMP_PARAMETER">
				<field name="pathapi_twitter_docs" class="inputbox" type="mappingfields" label="PLG_TECHJOOML_TWITEER_API_DOC" description="PLG_TECHJOOML_TWITEER_API_DOC_DESC" />
				<!--<field name="mapping_field_0" class="inputbox" type="mappingfields"  rows="8" cols="50" label="Mapping Fields For Joomla" description="Enter Joomla fields on left hand side of '=' and Twitter fields on right hand side of '='.Note that every mapping field is seperated by newline." />-->
				<field name="mapping_field_1" class="inputbox" type="mappingfields"  rows="8" cols="50" label="PLG_TECHJOOML_TWITEER_API_JOMSOCIAL" description="PLG_TECHJOOML_TWITEER_API_JOMSOCIAL_DESC" />
				<field name="mapping_field_2" class="inputbox" type="mappingfields" rows="8" cols="50" label="PLG_TECHJOOML_TWITEER_API_CB" description="PLG_TECHJOOML_TWITEER_API_CB_DESC" />
			</fieldset>
		</fields>
	</config>

</extension>
