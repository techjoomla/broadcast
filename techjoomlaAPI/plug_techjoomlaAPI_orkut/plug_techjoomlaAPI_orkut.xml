<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="techjoomlaAPI" method="upgrade">
	<name>Techjoomla-Orkut API</name>
	<author>Techjoomla</author>
	<creationDate>25 Oct 2011</creationDate>
	<copyright>(C)techjoomla.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>extensions@tekdi.net</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<version>1.2.2</version>
	<isapplication>true</isapplication>
	<description>
		Techjoomla Orkut API plugin 
	</description>
	
	<files>
		<file plugin="plug_techjoomlaAPI_orkut">plug_techjoomlaAPI_orkut.php</file>
		<folder>plug_techjoomlaAPI_orkut</folder>
	</files>
	<languages folder="language"> 
			<language tag="/en-GB">/en-GB/en-GB.plug_techjoomlaAPI_orkut.ini</language>
	</languages>
	<!-- parameters for Joomla 1.5.x -->
	<params addpath="/plugins/techjoomlaAPI/plug_techjoomlaAPI_orkut/element/pathapi">
		<param name="pathapi_orkut" type="pathapi" label="Get Your Keys From Here" description="Click Here to get the application key and secret" />	
		<param name="appKey" type="text" default="" label="Enter Orkut application key" description="Enter Orkut application key" />
		<param name="appSecret" type="text" default="" label="Enter Orkut secret key" description="Enter Orkut secret key" />
		<param name="log_file_path" type="hidden" default="" label="Log File Path" description="Enter the Path of Folder where Log files will stored" />		
	</params>
	
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
  	<fields name="params">
    	<fieldset name="basic" label="Plugin Parameters" addfieldpath="/plugins/techjoomlaAPI/plug_techjoomlaAPI_orkut/plug_techjoomlaAPI_orkut/element/pathapi">
				<field name="pathapi_orkut" type="pathapi" label="Get Your Keys From Here" description="Click Here to get the application key and secret" />
				<field name="appKey" type="text" default="" label="Enter Orkut application key" description="Enter Orkut application key"/>
				<field name="appSecret" type="text" default="" label="Enter Orkut secret key" description="Enter Orkut secret key" />
				<field name="log_file_path" type="hidden" default="" label="Log File Path" description="Enter the Path of Folder where Log files will stored"/>		
			</fieldset>
		</fields>
	</config>

</install>
