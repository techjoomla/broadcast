<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="community" method="upgrade">
	<name>Jomsocial Broadcast</name>
	<creationDate>Feb 2012</creationDate>
	<author>TechJoomla</author>
	<authorEmail>TechJoomla</authorEmail>
	<authorUrl>contact@techjoomla.com</authorUrl>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.5</version>
	<isapplication>true</isapplication>
	<description>
		Broadcast Jomsocial status to other Networks
	</description>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_community_jomsocialbroadcast.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.plg_community_jomsocialbroadcast.ini</language>
		<language tag="zh-TW">zh-TW/zh-TW.plg_community_jomsocialbroadcast.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_community_jomsocialbroadcast.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_community_jomsocialbroadcast.ini</language>
 	</languages>

	<files>
		<file plugin="jomsocialbroadcast">jomsocialbroadcast.php</file>
	</files>

	<!-- parameters for Joomla 1.5.x -->
	<params addpath="/plugins/community/element">
		<param name="plugintitle" type="text" default="Jomsocial Broadcast" label="PLG_NAME" description="PLG_NAME_DESC" />
		<param name="show_plugin" type="list" default="1" label="PLG_PRO" description="PLG_PRO_DESC">
			<option value="0">BCPLG_NO</option>
			<option value="1">BCPLG_YES</option>
		</param>
		<param name="show_horizontal" type="radio" default="1" label="PLG_ORIENT" description="PLG_ORIENT_DESC">
			<option value="1">PLG_ORIENT_HR</option>
			<option value="0">PLG_ORIENT_VR</option>
		</param>
		<param name="coreapp" type="list" default="1" label="BC_CORE" description="BC_CORE_DESC">
			<option value="0">BCPLG_NO</option>
			<option value="1">BCPLG_YES</option>
		</param>
    </params>

	<!-- Fields for Joomla 1.6.x and onwards -->
 	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugintitle" type="text" default="Jomsocial Broadcast" label="PLG_NAME" description="PLG_NAME_DESC" />
				<field name="show_plugin" type="list" default="1" label="PLG_PRO" description="PLG_PRO_DESC">
					<option value="0">BCPLG_NO</option>
					<option value="1">BCPLG_YES</option>
				</field>
				<field name="show_horizontal" type="radio" default="hr" label="PLG_ORIENT" description="PLG_ORIENT_DESC">
					<option value="hr">PLG_ORIENT_HR</option>
					<option value="vr">PLG_ORIENT_VR</option>
				</field>
				<field name="coreapp" type="list" default="0" label="BC_CORE" description="BC_CORE_DESC">
					<option value="0">BCPLG_NO</option>
					<option value="1">BCPLG_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
